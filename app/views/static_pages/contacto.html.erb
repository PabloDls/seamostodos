				<div><%= image_tag("c_correo.png")%> <p style="display:inline-block;">seamostodos.ac@hotmail.com</p></div>
				<div><%= image_tag("c_ubicacion.png")%> <p style="display:inline-block;">Golfo de Panamá 105 <br> Col. Lomas del Poniente, <br> Snata Catarina, N.L. C.P 66369</p></div>
				<div><%= image_tag("c_facebook.png")%> <p>Seamos Todos AC</p></div>
			</div>
		</div>
	</div>
</section>